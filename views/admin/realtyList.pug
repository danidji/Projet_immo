extends layout_admin

block content
    h2 🏠/  Les biens

    .headRealty
        h3 Liste des biens
        .adminButton.realtyList
            a(href="/admin/biens") Enregistrer un bien

    .contentList
        .flash_msg 
            - var messages = getMessages()
                if messages.notify
                    each msg in messages.notify
                        .alert.alert-info= msg
                if messages.error
                    each msg in messages.error
                        .alert.alert-danger= msg

        table 
            thead 
                tr 
                    th Vendeur
                    th Adresse
                    th Code postal / Ville
                    th Surface en m²
                    th Nb de pièces
            tbody
                each val in realtyList
                    tr
                        td= val.realtyAdress.sellerName 
                        td= val.realtyAdress.adress 
                        td= val.realtyAdress.postalCode+ ' ' +val.realtyAdress.city 
                        td= val.realtyAdress.surface 
                        td= val.realtyAdress.room
                        td.delete 
                            a(href="/admin/realtyList/delete/" + val._id) 🗑️
                        td.modify 
                            a(href="/admin/realtyList/modify/" + val._id) 🖊️
