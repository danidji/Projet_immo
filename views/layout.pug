doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body

    .container 
      nav  
        .logo TeLoger
        ul
          each val in [{lien:'/',text:'Accueil'},{lien:'/register',text:'Inscription'},{lien:'#',text:'Se connecter'}]
            li
              a(href=val.lien) #{val.text}

      - var messages = getMessages()
        if messages.notify
          each msg in messages.notify
            .alert.alert-info= msg
        if messages.error
          each msg in messages.error
            .alert.alert-danger= msg

    block content

      

    script(src=process.env.BROWSER_REFRESH_URL)