doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body

    .container 
      nav  
        .logo TeLoger
        if session === undefined
          ul
            each val in [{lien:'/',text:'Accueil'},{lien:'/register',text:'Inscription'},{lien:'/login',text:'Se connecter'}]
              li
                a(class=val.class,href=val.lien) #{val.text}
        else
          ul
            each val in [{lien:'/',text:'Accueil'},{lien:'/register',text:'Inscription'},{lien:'/admin/dashboard',text:'Admin'},{lien:'/logout',text:'Se d√©connecter'}]
              li
                a(class=val.class,href=val.lien) #{val.text}

      - var messages = getMessages()
        if messages.notify
          each msg in messages.notify
            .alert.alert-info= msg
        if messages.error
          each msg in messages.error
            .alert.alert-danger= msg

    block content

      

